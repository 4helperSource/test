    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60px"
